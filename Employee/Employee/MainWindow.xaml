<Window x:Class="Employee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Create" Content="Add" Command="{Binding Path=addEmployee}" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" Width="128" Height="40"/>
        <Button x:Name="Edit" Content="Edit" Command="{Binding Path=editEmployee}" HorizontalAlignment="Left" Margin="178,23,0,0" VerticalAlignment="Top" Width="125" Height="40"/>
        <Button x:Name="View" Content="View" Command="{Binding Path=viewEmployee}" HorizontalAlignment="Left" Margin="350,23,0,0" VerticalAlignment="Top" Width="116" Height="40"/>

    </Grid>
</Window>
